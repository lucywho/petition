<h1 id="h1edit">Edit your profile information</h1>

<div class="error_msg">{{wentWrong}}</div>

<form action="/edit" method="POST" id="edit">

    <div id="edit_profile">
      <input type="hidden" name="_csrf" value="{{csrfToken}}">
     <p><input name="first_name" placeholder="First name..." value={{firstname}}></p>
      <p><input name="last_name" placeholder="Last name..." value={{lastname}}></p>
      <p><input type="email" name="email" placeholder="email address..." value={{email}}></p>
      <p><input type="password"  name="password" placeholder="choose a password..." ></p>
      <p><input name="age" placeholder="age..." value={{age}}></p>
      <p><input name="city" placeholder="city..." value={{city}} ></p>
      <p><input name="homepage" placeholder="http..." value={{url}}></p>
    </div>

    

    <button id="editNow">Update Your Profile</button>
  </form>
